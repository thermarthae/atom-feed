{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2015"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "baseUrl": ".",
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/__tests__/**/*"
    ]
}